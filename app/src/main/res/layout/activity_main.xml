<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotstar Episode Finder"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:drawableStart="@android:drawable/btn_star"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/urlLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotstar Episode URL:"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/hotstarUrlEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter full Hotstar episode URL"
        android:inputType="textUri"
        app:layout_constraintTop_toBottomOf="@+id/urlLabelTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fetchButton"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Fetch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hotstarUrlEditText"
        app:layout_constraintBottom_toBottomOf="@+id/hotstarUrlEditText"
        android:backgroundTint="@color/material_dynamic_primary40"
        android:textColor="@color/material_dynamic_primary95"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/seriesInfoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@+id/hotstarUrlEditText" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Series &amp; Episode Title" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/seriesInfoTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/metadataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:lineSpacingExtra="4dp"
            tools:text="Season/Episode: S1 E1\nDuration: 42m\nDescription: This is a sample description...\nContent ID: 123456789" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>